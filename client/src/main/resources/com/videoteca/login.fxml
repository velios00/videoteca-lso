<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.videoteca.LoginController">
    <children>
        <Label text="Accedi" />
        <TextField fx:id="usernameField" promptText="Nome utente" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <Button fx:id="loginButton" text="Accedi" onAction="#handleLogin"/>
        <Button fx:id="backButton" text="Torna alla home" onAction="#switchToLanding"/>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>